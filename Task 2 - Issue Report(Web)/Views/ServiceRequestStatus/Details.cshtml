@model Task_2___Issue_Report_Web_.Models.ServiceRequest
@using Task_2___Issue_Report_Web_.Models
@{
    ViewData["Title"] = "Service Request Details";
    var relatedRequests = ViewBag.RelatedRequests as List<ServiceRequest> ?? new List<ServiceRequest>();
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h2 class="mb-1"><i class="fas fa-info-circle me-2"></i>Service Request Details</h2>
                <p class="text-muted mb-0">Request ID: <strong>@Model.RequestId</strong></p>
            </div>
            <div class="d-flex align-items-center">
                <a class="btn btn-secondary" href="/ServiceRequestStatus"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Request Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong><i class="fas fa-id-card me-2 text-muted"></i>Request ID:</strong>
                                <p class="text-primary">@Model.RequestId</p>
                            </div>
                            <div class="col-md-6">
                                <strong><i class="fas fa-tag me-2 text-muted"></i>Category:</strong>
                                <p><span class="badge bg-info">@Model.Category</span></p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong><i class="fas fa-map-marker-alt me-2 text-muted"></i>Location:</strong>
                                <p>@Model.Location</p>
                            </div>
                            <div class="col-md-6">
                                <strong><i class="fas fa-calendar me-2 text-muted"></i>Submitted:</strong>
                                <p>@Model.SubmittedAt.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong><i class="fas fa-align-left me-2 text-muted"></i>Description:</strong>
                            <p class="mt-2">@Model.Description</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.StatusNotes))
                        {
                            <div class="mb-3">
                                <strong><i class="fas fa-sticky-note me-2 text-muted"></i>Status Notes:</strong>
                                <p class="mt-2 text-muted">@Model.StatusNotes</p>
                            </div>
                        }
                        @if (Model.Attachments?.Any() == true)
                        {
                            <div class="mb-3">
                                <strong><i class="fas fa-paperclip me-2 text-muted"></i>Attachments:</strong>
                                <div class="mt-2 d-flex flex-wrap gap-2">
                                    @foreach (var attachment in Model.Attachments)
                                    {
                                        <a target="_blank" href="@attachment" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-file me-1"></i>@System.IO.Path.GetFileName(attachment)
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Status & Priority</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <strong><i class="fas fa-info-circle me-2 text-muted"></i>Current Status:</strong>
                                @{
                                    var statusClass = Model.Status switch
                                    {
                                        RequestStatus.Submitted => "bg-secondary",
                                        RequestStatus.UnderReview => "bg-info",
                                        RequestStatus.InProgress => "bg-primary",
                                        RequestStatus.OnHold => "bg-warning",
                                        RequestStatus.Resolved => "bg-success",
                                        RequestStatus.Closed => "bg-dark",
                                        _ => "bg-secondary"
                                    };
                                }
                                <p class="mt-2"><span class="badge @statusClass fs-6">@Model.Status</span></p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong><i class="fas fa-flag me-2 text-muted"></i>Priority:</strong>
                                @{
                                    var priorityClass = Model.Priority <= 2 ? "text-danger" : Model.Priority <= 4 ? "text-warning" : "text-muted";
                                    var priorityText = Model.Priority <= 2 ? "High" : Model.Priority <= 4 ? "Medium" : "Normal";
                                }
                                <p class="mt-2 @priorityClass">
                                    <i class="fas fa-flag me-1"></i>@priorityText (Priority Level: @Model.Priority)
                                </p>
                            </div>
                        </div>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="mb-3">
                                <strong><i class="fas fa-clock me-2 text-muted"></i>Last Updated:</strong>
                                <p class="mt-2">@Model.UpdatedAt.Value.ToLocalTime().ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AssignedTo))
                        {
                            <div class="mb-3">
                                <strong><i class="fas fa-user me-2 text-muted"></i>Assigned To:</strong>
                                <p class="mt-2">@Model.AssignedTo</p>
                            </div>
                        }
                        @if (Model.EstimatedCompletionDate.HasValue)
                        {
                            <div class="mb-3">
                                <strong><i class="fas fa-calendar-check me-2 text-muted"></i>Estimated Completion:</strong>
                                <p class="mt-2">@Model.EstimatedCompletionDate.Value.ToLocalTime().ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-link me-2"></i>Related Requests</h5>
                    </div>
                    <div class="card-body">
                        @if (relatedRequests.Any())
                        {
                            <p class="small text-muted">Other service requests similar to this one (found using graph traversal algorithms):</p>
                            <div class="list-group list-group-flush">
                                @foreach (var related in relatedRequests.Take(5))
                                {
                                    <a href="/ServiceRequestStatus/Details?requestId=@related.RequestId" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <strong class="text-primary">@related.RequestId</strong>
                                                <p class="mb-1 small">@related.Category</p>
                                                <small class="text-muted">@related.Location</small>
                                            </div>
                                            <span class="badge bg-info">@related.Status</span>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted small">No related requests found.</p>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Did You Know?</h5>
                    </div>
                    <div class="card-body">
                        <p class="small mb-0">
                            This service request tracking system uses advanced data structures including:
                            <ul class="small mb-0">
                                <li>Binary Search Trees for efficient searching</li>
                                <li>AVL Trees for balanced organization</li>
                                <li>Red-Black Trees for optimal performance</li>
                                <li>Heaps for priority-based retrieval</li>
                                <li>Graphs for relationship mapping</li>
                                <li>Minimum Spanning Trees for optimization</li>
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

