@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <img src="~/img/unnamed.png" alt="City of Cape Town" class="brand-logo-horizontal mb-3" />
        <h1>Welcome to Municipal Services</h1>
        <p>Your gateway to efficient city services and community engagement</p>
    </div>
</div>

<div class="feature-grid">
    <div class="feature-card fade-in">
        <div class="feature-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h3>Report Issues</h3>
        <p>Report problems in your neighborhood quickly and easily. Help us keep our city clean and safe.</p>
        <a href="/Report" class="btn btn-primary btn-lg">Report an Issue</a>
    </div>

    <div class="feature-card fade-in">
        <div class="feature-icon">
            <i class="fas fa-calendar-alt"></i>
        </div>
        <h3>Local Events</h3>
        <p>Stay informed about upcoming community events and important announcements.</p>
        <a href="/Events" class="btn btn-primary btn-lg">Browse Local Events</a>
    </div>

    <div class="feature-card fade-in">
        <div class="feature-icon">
            <i class="fas fa-search"></i>
        </div>
        <h3>Track Requests</h3>
        <p>Monitor the status of your service requests and see how we're addressing your concerns.</p>
        <a href="/ServiceRequestStatus" class="btn btn-primary btn-lg">Track Service Requests</a>
    </div>
</div>

<div class="text-center mt-5">
    <div class="card">
        <div class="card-body">
            <h4>Quick Actions</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <a href="/Report" class="btn btn-primary w-100">Report New Issue</a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="/Report/List" class="btn btn-outline-primary w-100">View All Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>
