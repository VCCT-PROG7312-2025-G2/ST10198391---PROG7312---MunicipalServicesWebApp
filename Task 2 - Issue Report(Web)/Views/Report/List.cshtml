@model List<Task_2___Issue_Report_Web_.Models.Issue>
@using System.IO
@{
    ViewData["Title"] = "Previous Reports";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list-alt me-2"></i>Previous Reports</h2>
    <a href="/Report" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>New Report
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="card">
            <div class="card-body">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h4>No reports submitted yet</h4>
                <p class="text-muted">Be the first to help improve our community by reporting an issue.</p>
                <a href="/Report" class="btn btn-primary">Submit Your First Report</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var r in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="badge bg-primary">@r.Category</span>
                            <small class="text-muted">@r.SubmittedAt.ToLocalTime().ToString("MMM dd, yyyy")</small>
                        </div>

                        <h5 class="card-title">
                            <i class="fas fa-map-marker-alt me-1 text-muted"></i>
                            @r.Location
                        </h5>

                        <p class="card-text text-muted">@r.Description</p>

                        @if (r.Attachments?.Any() == true)
                        {
                            <div class="mt-3">
                                <h6 class="small text-muted mb-2">
                                    <i class="fas fa-paperclip me-1"></i>Attachments:
                                </h6>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var a in r.Attachments)
                                    {
                                        <a target="_blank" href="@a" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-file me-1"></i>@System.IO.Path.GetFileName(a)
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            <i class="fas fa-clock me-1"></i>
                            Submitted @r.SubmittedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
